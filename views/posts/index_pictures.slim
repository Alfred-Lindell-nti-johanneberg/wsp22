section 
    - posts.each do |el|
        h1 #{el["title"]}
        article = el["body"]
        div
            -post_user=el["user_id"]
            -users.each do |user|
                -if user["id"] == post_user
                    -@role_id = user["role_id"]
                    p = "Posted by user #{user["name"]}"

            a  href="/posts/#{el["id"]}" view post
            -if current_user != nil 
                -if current_user["user_id"]==1
                    form action="/post/#{el["id"]}/delete" method="post"
                        input type="submit" value="remove post" 